<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_ver_perfil"
    android:orientation="vertical"
    android:background="#e1e6eb"
    tools:context="com.orochi.utfpr.levaeu.Activitys.VerPerfilActivity">
.
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:showIn="@layout/activity_ver_perfil"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context="com.orochi.utfpr.levaeu.Activitys.VerPerfilActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cancelar"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emanuel Mazzer"
                android:id="@+id/txtNomePerfil"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNumCaronasOferecidas"
                android:text="Caronas oferecidas: 0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00d423"
                android:id="@+id/txtNumLikes"

                android:text="Likes: 0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cb0101"
                android:id="@+id/txtNumDislikes"
                android:text="Dislikes: 0"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

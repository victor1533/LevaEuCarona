<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_new_carona"

    tools:context="com.orochi.utfpr.levaeu.Activitys.NewCaronaActivity">
    <NumberPicker
        android:id="@+id/numeroVagas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:targetApi="honeycomb" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:ems="10"
        android:hint="Data e hora da partida"

        android:id="@+id/dataHoraPartidaCampo" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Origem"
        android:layout_weight="1"
        android:editable="false"
        android:id="@+id/origemCampo"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar"
        android:id="@+id/selecOrigem"
        android:layout_gravity="right" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="Destino"
        android:layout_weight="1"
        android:id="@+id/DestinoCampo" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecionar"
            android:id="@+id/selecDestino"
            android:layout_gravity="right" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar carona"
        android:id="@+id/criaCarona"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
